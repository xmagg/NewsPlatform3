<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewsPlatform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NewsPlatform3.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">NewsPlatform</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Login">Log in</a>
                        </li>
                        <li class="nav-item">
                            @if (ViewData["isLoggedin"] == "1")
                            {
                                <a id="myMenu1" class="nav-link text-dark" asp-area="" asp-controller="Articles" asp-action="GetListArticle" style="pointer-events: auto>List</a>
                            }
                            else
                            {
                            <a id="myMenu1" class="nav-link text-light" asp-area="" asp-controller="Articles" asp-action="GetListArticle" style="pointer-events: none">List</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (ViewData["isLoggedin"] == "1")
                            {
                                <a id="myMenu2" class="nav-link text-dark" asp-area="" asp-controller="Articles" asp-action="GetArticle" style="pointer-events: auto>Article</a>

                                <a class="nav-link text-light"></a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (ViewData["isLoggedin"] == "1")
                            {
                                <a id="myMenu3" class="nav-link text-dark" asp-area="" asp-controller="Logout" asp-action="Index" style="pointer-events: auto">Log out</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (ViewData["isLoggedin"] == "1")
                            {
                                <a id="myMenu4" class="nav-link text-dark" style="pointer-events: none">[ Login: @ViewData["login"] / Level: @ViewData["level"] ]</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - NewsPlatform
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
